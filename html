<script>
document.getElementById('year').textContent = new Date().getFullYear();


const cursor = document.querySelector('.cursor-heart');
let lastX = window.innerWidth/2, lastY = window.innerHeight/2;
let rafID = null;
window.addEventListener('mousemove', (e)=>{
lastX = e.clientX; lastY = e.clientY;
if(!rafID){
rafID = requestAnimationFrame(()=>{
cursor.style.transform = `translate(${lastX}px, ${lastY}px)`;
rafID = null;
});
}
const t = document.createElement('div');
t.className = 'trail';
t.style.left = lastX + 'px';
t.style.top = lastY + 'px';
t.innerHTML = `<svg viewBox='0 0 24 24' fill='currentColor'><path d='M12 21s-6-4.35-9.33-8.22C-.5 7.39 3.24 1 8.4 4.28 10.08 5.32 12 7.5 12 7.5s1.92-2.18 3.6-3.22C20.76 1 24.5 7.39 21.33 12.78 18 16.65 12 21 12 21z'/></svg>`;
document.body.appendChild(t);
setTimeout(()=> t.remove(), 900);
}, {passive:true});


window.addEventListener('touchmove', (e)=>{
const touch = e.touches[0];
if(!touch) return;
cursor.style.transform = `translate(${touch.clientX}px, ${touch.clientY}px)`;
}, {passive:true});
</script>
